# Local development environment (single source of truth for all apps/services)

# PostgreSQL (dockerized)
POSTGRES_DB=olymroad
POSTGRES_USER=olymroad
POSTGRES_PASSWORD=olymroad_dev_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://olymroad:olymroad_dev_password@localhost:5432/olymroad
DATABASE_URL_DOCKER=postgresql://olymroad:olymroad_dev_password@postgres:5432/olymroad

# Object storage
STORAGE_PRESIGN_TTL_SECONDS=900

# MinIO (dockerized)
MINIO_ROOT_USER=olymroad
MINIO_ROOT_PASSWORD=olymroad_dev_password
MINIO_BUCKET=olymroad-dev
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=olymroad
MINIO_SECRET_KEY=olymroad_dev_password

# Runtime ports (used by API and PM2 web preview)
PORT=3000
WEB_PORT=5173

# Public API URL consumed by web/capacitor clients
PUBLIC_API_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,capacitor://localhost

# API auth + timezone
AUTH_TOKEN_SECRET=change_me_in_production
AUTH_TOKEN_TTL_SECONDS=604800
APP_TIMEZONE=Asia/Almaty
APP_TIMEZONE_OFFSET_MINUTES=300

# OAuth providers
GOOGLE_OAUTH_CLIENT_IDS=
PUBLIC_GOOGLE_OAUTH_CLIENT_ID=

# Email / OTP (Resend)
RESEND_API_KEY=
RESEND_FROM_EMAIL=onboarding@resend.dev
EMAIL_OTP_TTL_SECONDS=600
EMAIL_OTP_MAX_ATTEMPTS=5

# WebAuthn / passkeys
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=OlymRoad
WEBAUTHN_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://localhost:5173
WEBAUTHN_CHALLENGE_TTL_SECONDS=300

# AI provider configuration
OPENAI_API_KEY=
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_PRIMARY=gpt-5.2
OPENAI_MODEL_FAST=gpt-5.2-mini
OPENAI_MODEL_NANO=gpt-5-nano
